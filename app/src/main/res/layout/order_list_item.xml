<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/padding_10"
    android:layout_marginTop="@dimen/padding_10"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="@dimen/padding_5"
    android:elevation="@dimen/padding_10">

    <LinearLayout
        android:id="@+id/relativeLayoutAssign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/text_16"
        android:layout_marginBottom="@dimen/text_16"
        android:layout_marginRight="@dimen/padding_5"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/padding_5"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/padding_5"
            android:textStyle="bold"
            tools:text="Item Name - " />

        <TextView
            android:id="@+id/topicName"
            style="?android:labelTextSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/padding_5"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/padding_5"
            android:textStyle="bold"
            tools:text="Table " />

     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemQuanTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/padding_5"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/padding_5"
                android:textStyle="bold"
                tools:text="Item Quantity - " />

            <TextView
                android:id="@+id/itemQuant"
                style="?android:labelTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/padding_5"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/padding_5"
                android:textStyle="bold"
                tools:text="5 " />

        </LinearLayout>








    </LinearLayout>
</androidx.cardview.widget.CardView>